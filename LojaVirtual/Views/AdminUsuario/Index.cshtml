
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="~/Content/Admin.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/3933811a4c.js"></script>
    <title>Admin</title>
</head>
<body>
    <div class="menu-admin bg-dark">
        <h2 class="m-2 text-white">Loja Virtual</h2>
        <hr class="bg-white">
        <ul class="nav menu-item">
            <li class="nav-link text-white"><a><i class="fas fa-user-tie"></i> Produtos</a></li>
            <li class="nav-link text-white"><a><i class="fas fa-users"></i> Usuários</a></li>
            <li class="nav-link text-white"><a><i class="fas fa-money-bill-wave"></i> Preços</a></li>
        </ul>
        <hr class="bg-white">
    </div>
    <main>
        <div class="usuarios-admin">
            <h1 class="mt-3">Gerenciamento de Usuarios</h1>
            <div class="input-group col-md-5 mb-3 mt-5 pl-0 marg-usuario">
                <input type="search" class="form-control" placeholder="Pesquise pelo nome"
                       aria-label="pesquisa">
                <div class="input-group-append">
                    <span class="input-group-text">Pesquisar</span>
                </div>
            </div>
            <!-----Tabela de Usuarios----->
            <div class="table-wrapper-scroll-y my-custom-scrollbar">
                <table class="table table-bordered table-striped table-dark">
                    <thead class="thead">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Nome Completo</th>
                            <th scope="col">CPF</th>
                            <th scope="col">Data de Nascimento</th>
                            <th scope="col">Telefone</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var usuario in ViewBag.Usuarios)
                        {
                        <tr>
                            <th scope="row">@usuario.IdUsuario</th>
                            <td>@usuario.NomeCompleto</td>
                            <td>@usuario.CPF</td>
                            <td>@usuario.DataNascimento</td>
                            <td>@usuario.Telefone</td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            <hr>
            <!-----Form Usuario----->
            <form method="post">
                <div class="form-row marg-usuario">
                    <div class="form-group col-md-12">
                        <label for="NomeCompleto">Nome Completo</label>
                        <input name="NomeCompleto" type="text" class="form-control" id="NomeCompleto"
                               placeholder="Exemplo: Pedro Henrique Eifler ">
                    </div>
                </div>
                <div class="form-row marg-usuario">
                    <div class="form-group col-md-6">
                        <label for="CPF">CPF</label>
                        <input name="CPF" type="text" class="form-control" id="CPF" placeholder="Exemplo: XXX-XXX-XXX-XX">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="Telefone">Telefone</label>
                        <input name="Telefone" type="text" class="form-control" id="Telefone" placeholder="Exemplo: (XX) XXXX-XXXX">
                    </div>
                </div>
                <div class="form-row marg-usuario">
                    <div class="form-group col-md-12">
                        <label for="DataNascimento">Data de Nascimento</label>
                        <input name="DataNascimento" type="date" class="form-control" id="DataNascimento">
                    </div>
                </div>
                <div class="marg-usuario mt-2">
                    <button formaction="/AdminUsuario/Adicionar" type="submit" class="btn btn-success">Cadastrar</button>
                    <button formaction="/AdminUsuario/Excluir" type="submit" class="btn btn-warning">Editar</button>
                    <button type="submit" class="btn btn-danger">Excluir</button>
                </div>
            </form>
        </div>
    </main>
</body>
</html>
