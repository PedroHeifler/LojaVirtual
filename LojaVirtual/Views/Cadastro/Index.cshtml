
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="~/Content/Site.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/3933811a4c.js"></script>
    <title>Cadastro</title>
</head>

<body>

    <!----Header---->
    <header>
        <!----Primeira Barra---->
        <div id="navbar-1">
            <nav class="navbar navbar-expand navbar-dark bg-dark d-flex bd-highlight">
                <ul class="navbar-nav p-2 flex-grow-1 bd-highlight">
                    <li><a href="#" class="nav-link active">Vendas</a></li>
                    <li><a href="#" class="nav-link">Aluguel</a></li>
                </ul>

                <ul class="navbar-nav p-2 bd-highlight">
                    <li><a href="/Login" class="nav-link">Logar</a></li>
                    <li><a href="/Cadastro" class="nav-link">Cadastrar</a></li>
                </ul>
            </nav>
        </div>

        <!----Segunda Barra---->
        <div id="navbar-2">
            <nav class="navbar navbar-expand-xl bg-dark d-flex bd-highlight align-items-stretch">

                <div class="navbar-pricipal container-fluid col-lg-12 col-12 col-md-12">
                    <button class="btn btn-dark" id="button-bar" data-toggle="collapse"
                            data-target="#navbarSupportedContent">
                        <i class="fas fa-bars"></i>
                    </button>
                    <h2 class="p-2 flex-grow-1 bd-highlight"><a href="/Home">Loja</a></h2>
                    <div class="collapse navbar-collapse position-relative" id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto">
                            <li><a href="#" class="nav-link"><i class="fas fa-male"></i>MASCULINO</a></li>
                            <li><a href="#" class="nav-link"><i class="fas fa-female"></i>FEMININO</a></li>
                            <li><a href="#" class="nav-link"><i class="fas fa-child"></i>INFANTIL</a></li>
                            <li><a href="#" class="nav-link"><i class="fas fa-baby"></i>BABY</a></li>
                        </ul>
                        <form class="form-inline mr-3">
                            <input class="form-control" type="search" placeholder="Pesquise Aqui!" aria-label="Search">
                            <button class="btn btn-primary my-2 my-sm-0" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </form>
                        <div class="cart-box">
                            <a href="#" class="btn cart-btn"><i class="fas fa-shopping-cart text-white"></i></a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </header>

    <main class="container">
        <h1 class="tituloCadastro mt-5">Cadastrar-se</h1>
        <form action="/Cadastro/Adicionar" id="formulario-cadastro" class="mb-5">
            <!--NAV-->
            <nav>
                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                    <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#usuario" role="tab"
                       aria-controls="usuario" aria-selected="true">Usuario</a>
                    <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#endereco" role="tab"
                       aria-controls="endereco" aria-selected="false">Endereco</a>
                </div>
            </nav>

            <div class="tab-content " id="nav-tabContent">
                <!--Usuario-->
                <div class="tab-pane fade show active p-3" id="usuario" role="tabpanel" aria-labelledby="nav-home-tab">
                    <div class="row">
                        <div class="form-usuario col-md-6">
                            <h3>Usuario</h3>
                            <div class="form-group">
                                <label for="nome">Nome Completo</label>
                                <input name="usuario.NomeCompleto" type="text" class="form-control" placeholder="Nome Completo">
                            </div>
                            <div class="form-group">
                                <label for="cpf">CPF</label>
                                <input name="usuario.CPF" type="text" class="form-control" placeholder="CPF">
                            </div>
                            <div class="form-group">
                                <label for="dataNascimento">Data de Nascimento</label>
                                <input name="usuario.DataNascimento" type="date" class="form-control" placeholder="Data de Nascimento">
                            </div>
                            <div class="form-group">
                                <label for="telefone">Telefone</label>
                                <input name="usuario.Telefone" type="tel" class="form-control" placeholder="Telefone">
                            </div>
                        </div>

                        <!--Conta-->
                        <div class="form-conta col-md-6 tab-pane fade show active" id="nav-home" role="tabpanel"
                             aria-labelledby="nav-home-tab">
                            <h3>Conta</h3>
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input name="login.Email" type="email" class="form-control" aria-describedby="emailHelp"
                                       placeholder="E-mail">
                            </div>
                            <div class="form-group">
                                <label for="senha">Senha</label>
                                <input name="login.Senha" type="password" class="form-control" placeholder="Senha">
                            </div>
                            <div class="form-group">
                                <label for="tpUsuario">Tipo de Usuario</label>
                                <input name="login.TpUsuario" type="text" class="form-control" placeholder="Tipo de Usuario">
                            </div>
                        </div>
                    </div>
                </div>
                <!--Endereco-->
                <div class="form-endereco col-md-6 tab-pane fade p-3" id="endereco" role="tabpanel"
                     aria-labelledby="nav-profile-tab">
                    <h3>Endereco</h3>
                    <div class="form-group">
                        <label for="cep">CEP</label>
                        <input name="endereco.CEP" type="text" class="form-control" placeholder="CEP">
                    </div>
                    <div class="form-group">
                        <label for="estado">Estado</label>
                        <input name="endereco.Estado" type="text" class="form-control" placeholder="Estado">
                    </div>
                    <div class="form-group">
                        <label for="cidade">Cidade</label>
                        <input name="endereco.Cidade" type="text" class="form-control" placeholder="Cidade">
                    </div>
                    <div class="form-group">
                        <label for="bairro">Bairro</label>
                        <input name="endereco.Bairro" type="text" class="form-control" placeholder="Bairro">
                    </div>
                    <div class="form-group">
                        <label for="rua">Rua</label>
                        <input name="endereco.Rua" type="text" class="form-control" placeholder="Rua">
                    </div>
                    <div class="form-group">
                        <label for="numero">Numero</label>
                        <input name="endereco.Numero" type="text" class="form-control" placeholder="Numero">
                    </div>
                    <div class="form-group">
                        <label for="coplemento">Complemento</label>
                        <input name="endereco.Complemento" type="text" class="form-control" placeholder="Complemmento">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Cadastrar-se</button>
                    </div>
                </div>
            </div>
        </form>
    </main>

    <footer class="position-relative mt-5">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-3">
                    <ul class="nav flex-column">
                        <h3>Institucional</h3>
                        <li class="nav-link">Sobre a Loja</li>
                        <li class="nav-link">Trabalhe Conosco</li>
                        <li class="nav-link">Seja nosso Parceiro</li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <ul class="nav flex-column">
                        <h3>Ajuda</h3>
                        <li class="nav-link">Entregas</li>
                        <li class="nav-link">Pagamentos</li>
                        <li class="nav-link">Devolucao</li>
                        <li class="nav-link">Cancelamento</li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <ul class="nav flex-column">
                        <h3>Politica</h3>
                        <li class="nav-link">Regulamento</li>
                        <li class="nav-link">Politica de Provacidade</li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h3>Redes Sociais</h3>
                    <ul class="nav redes-sociais d-flex justify-content-around">
                        <li class="facebook"><a href="#"></a><i class="fab fa-facebook-square"></i></li>
                        <li class="instagram"><a href="#"></a><i class="fab fa-instagram"></i></li>
                        <li class="twitter"><a href="#"></a><i class="fab fa-twitter"></i></li>
                        <li class="youtube"><a href="#"></a><i class="fab fa-youtube"></i></li>
                    </ul>
                </div>
            </div>
        </div>
        <img class="position-absolute nuvem-1" src="~/img/Nuvem-1.png">
        <img class="position-absolute nuvem-2" src="~/img/Nuvem-2.png">
        <img class="position-absolute nuvem-3" src="~/img/Nuvem-3.png">
        <img class="position-absolute nuvem-4" src="~/img/Nuvem-4.png">
    </footer>

</body>
