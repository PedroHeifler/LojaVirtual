
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/Admin.css" />

    <!--fontawsome-->
    <link href="~/fontawesome/css/all.css" rel="stylesheet">
    <link href="~/fontawesome/js/all.js" rel="stylesheet">

    <title>Admin</title>
</head>
<body>
    <header>
        <!-----Menu do admin----->
        <div class="menu-admin bg-dark" id="slide-collapse">
            <div class="d-flex justify-content-around">
                <h2 class="m-4 text-white"><a href="/Home" class="text-white"><i class="fas fa-tachometer-alt"></i> <span> Loja Virtual</span></a></h2>
                <button class="animacao-collapse navbar-toggler btn-collapse btn-remover-border mr-2 mt-3" type="button" data-toggle="collapse">
                    <span><i class="fas fa-bars text-white"></i></span>
                </button>
            </div>
            <hr class="bg-white">
            <ul class="nav menu-item">
                <a href="/AdminProduto"><li class="nav-link text-white p-3"><i class="fab fa-black-tie"></i><span> Produtos</span></></li></a>
                <hr class="bg-white" />
                <a href="/AdminUsuario"><li class="nav-link text-white p-3"><i class="fas fa-users"></i><span> Usuários</span></li></a>
                <hr class="bg-white" />
                <a href="/AdminEndereco"><li class="nav-link text-white p-3"><i class="fas fa-home"></i><span> Enderecos</span></li></a>
                <hr class="bg-white" />
                <a href="/AdminConta"><li class="nav-link text-white p-3"><i class="fas fa-at"></i><span> Contas</span></li></a>
                <hr class="bg-white" />
                <a href="/AdminDepartamento"><li class="nav-link text-white p-3"><i class="fas fa-address-card"></i><span> Categorias</span></li></a>
            </ul>
            <hr class="bg-white">
        </div>

        <!-----Nav Bar----->
        <nav class="navbar bg-dark d-flex flex-row bd-highlight">
            <button class="animacao-collapse navbar-toggler bd-highlight btn-collapse btn-remover-border" type="button" data-toggle="collapse">
                <span><i class="fas fa-bars text-white"></i></span>
            </button>
        </nav>
    </header>

    @RenderBody()

    <script>
        /*---Animacao do Menu---*/
        $(".animacao-collapse").click(function () {
            $("#slide-collapse").toggleClass("animacao");
            $(".tela-admin").toggleClass("animacao-tela")
        });

    $(document).ready(configurarControles);

    function configurarControles() {
        $("#listagemDeProdutos").load("@Url.Action("Listar")");
    }

    var pagina = 1
    
    function paginar(valor) {
        var novaPagina = pagina + valor;
        $("#listagemDeProdutos").load("@Url.Action("Listar")", { paginacao: novaPagina });

        pagina = novaPagina;
    }
    </script>

</body>
</html>
