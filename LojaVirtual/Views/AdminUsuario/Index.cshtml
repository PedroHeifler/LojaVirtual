
@{
    ViewBag.Title = "Usuário";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}


    <main>
        <div class="tela-admin">
            <h1 class="mt-4">Gerenciamento de Usuários</h1>
            <div class="input-group col-md-5 mb-3 mt-5 p-0">
                <input type="search" id="filtro-tabela" oninput="Filtrar('.adminTr')" class="form-control marg-usuario" placeholder="Pesquise pelo nome">
            </div>

            <img class="spinner m-3" src="~/img/Spinner.gif" />

            <button type="button" class="btn btn-primary m-3" data-toggle="modal" data-target=".bd-example-modal-lg">Adicionar</button>

            <!-----Tabela de Usuarios----->
            <div class="table-wrapper-scroll-y my-custom-scrollbar">
                <table class="table table-bordered table-striped table-dark">
                    <thead class="thead">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Nome Completo</th>
                            <th scope="col">CPF</th>
                            <th scope="col">Data de Nascimento</th>
                            <th scope="col">Telefone</th>
                            <th scope="col">Editar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var usuario in ViewBag.Usuarios)
                        {
                            <tr id="adminTr@(usuario.IdUsuario)" class="adminTr">
                                <th scope="row">@usuario.IdUsuario</th>
                                <td class="info-nome">@usuario.NomeCompleto</td>
                                <td>@usuario.CPF</td>
                                <td>@usuario.DataNascimento</td>
                                <td>@usuario.Telefone</td>
                                <td class="d-flex justify-content-center">
                                    <button class="btn btn-info ml-3" onclick="Editar('#adminTr@(usuario.IdUsuario)')" data-toggle="modal" data-target=".bd-example-modal-lg"><i class="fas fa-pen"></i></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h3 class="modal-title">Usuario</h3>
                        </div>
                        <!-----Form Usuario----->
                        <form method="post" class="p-3">
                            <input name="IdUsuario" style="visibility: hidden; height: 0px" />
                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    <label for="NomeCompleto">Nome Completo</label>
                                    <input name="NomeCompleto" type="text" class="form-control" id="NomeCompleto"
                                           placeholder="Exemplo: Pedro Henrique Eifler" required>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="CPF">CPF</label>
                                    <input name="CPF" type="text" class="form-control" id="CPF" placeholder="Exemplo: XXX-XXX-XXX-XX" required>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="DataNascimento">Data de Nascimento</label>
                                    <input name="DataNascimento" type="date" class="form-control" id="DataNascimento" required>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="Telefone">Telefone</label>
                                    <input name="Telefone" type="text" class="form-control" id="Telefone" placeholder="Exemplo: (XX) XXXX-XXXX" required>
                                </div>
                            </div>
                            <div class="modal-footer mt-2">
                                <p class="msg-erro text-danger mt-3">Não foi possivel excluir, tente novamente!</p>
                                <p class="msg-done text-success mt-3">Salvo com sucesso!</p>
                                <button class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                                <button formaction="/AdminUsuario/Salva" type="submit" class="btn btn-success">Salvar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>

<!--Script-->
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
<script src="~/Scripts/Editar.js"></script>
<script src="~/Scripts/Filtro.js"></script>




