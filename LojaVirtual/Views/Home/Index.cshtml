
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="~/Content/Site.css">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <!--fontawsome-->
    <link href="~/fontawesome/css/all.css" rel="stylesheet">
    <link href="~/fontawesome/js/all.js" rel="stylesheet">
    <title>Home</title>
</head>

<body>
    <!----Header---->
    <header>
        <!----Primeira Barra---->
        <div id="navbar-1">
            <nav class="navbar navbar-expand navbar-dark bg-dark d-flex bd-highlight">
                <ul class="navbar-nav p-2 flex-grow-1 bd-highlight">
                    <li><a href="#" class="nav-link active">Vendas</a></li>
                    <li><a href="#" class="nav-link">Aluguel</a></li>
                </ul>

                @if (ViewBag.SessionLogin != null)
                {
                    if (ViewBag.SessionLogin.TpUsuario == "Admin")
                    {
                        <div class="dropdown dropleft">
                            <button class="btn btn-outline-light dropdown-toggle btn-sm ml-3" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="/dashboard">Administrar</a>
                                <a class="dropdown-item" href="/Produtos/Carrinho">Meus Pedidos</a>
                                <hr />
                                <a class="dropdown-item" href="/Login/Sair">Sair</a>
                            </div>
                        </div>
                        <label class="text-white m-2">Bem Vindo @ViewBag.SessionLogin.Usuario.NomeCompleto!</label>
                    }
                    else
                    {
                        <label class="text-white m-2">Bem Vindo @ViewBag.SessionLogin.Usuario.NomeCompleto!</label>

                        <div class="dropdown dropleft">
                            <button class="btn btn-outline-light dropdown-toggle btn-sm ml-3" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="/Produtos/Carrinho">Meus Pedidos</a>
                                <hr />
                                <a class="dropdown-item" href="/Login/Sair">Sair</a>
                            </div>
                        </div>
                    }

                }
                else
                {
                    <ul class="navbar-nav p-2 bd-highlight">
                        <li><a href="/Login" class="nav-link">Login</a></li>
                        <li><a href="/Cadastro" class="nav-link">Cadastrar</a></li>
                    </ul>
                }

            </nav>
        </div>

        <!----Segunda Barra---->
        <div id="navbar-2">
            <nav class="navbar navbar-expand-xl align-items-stretch">

                <!----Carousel---->
                <div id="carouselExampleIndicators" class="carousel slide carousel-fade" data-ride="carousel" data-interval="false">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="~/img/Carousel-1.jpg" alt="Primeiro Slide">
                            <div class="carousel-caption d-none d-md-block texto-slide">
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/img/Carousel-2.jpg" alt="Segundo Slide">
                            <div class="carousel-caption d-none d-md-block texto-slide">
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/img/Carousel-3.jpg" alt="Terceiro Slide">
                            <div class="carousel-caption d-none d-md-block texto-slide">
                            </div>
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Anterior</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Próximo</span>
                    </a>
                </div>

                <nav class="navbar navbar-expand-xl navbar-dark d-flex flex-row bd-highlight position-absolute">

                    <div class="dropdown">
                        <button class="btn btn-primary dropdown-toggle ml-3 botao-bar" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-bars"></i>
                        </button>
                        <div class="dropdown-menu ml-3 esconde-dropdown" aria-labelledby="dropdownMenuButton">

                            @foreach (var departamento in ViewBag.Departamentos)
                            {
                                <a href="/Produtos" class="nav-link border-bottom border-top">@departamento.Genero</a>
                            }
                        </div>
                    </div>
                    <h1><a class="navbar-brand flex-grow-1 bd-highlight ml-5" href="/Home">Loja Virtual</a></h1>

                    <div class="collapse navbar-collapse">
                        <ul class="navbar-nav ml-5">

                            @foreach (var departamento in ViewBag.Departamentos)
                            {
                                <li><a href="/produtos" class="nav-link">@departamento.Genero</a></li>
                            }
                        </ul>
                    </div>
                    <form class="form-inline my-2 my-lg-0 bd-highlight">
                        <input class="form-control mr-sm-2" type="search" placeholder="Pesquisar" onkeypress="return asd(event)">
                        <button class="btn btn-primary my-2 my-sm-0" type="button" onclick="asd(13)">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>
                    <div class="cart-box bd-highlight m-2">
                        <a href="/Produtos/Carrinho" class="btn cart-btn"><i class="fas fa-shopping-cart text-white"></i></a>
                    </div>
                </nav>
            </nav>
        </div>
    </header>

    <!----Main 1---->
    <main class="container-fluid">

        <!----Imagens Destaques---->
        <div class="img-destaque row d-flex justify-content-around mt-5 mb-5">
            <div class="position-relative">
                <img class="col-md-12" src="~/img/destaque-1.jpg">
                <h3 class="text-img-destaque-1">AS MELHORES ROUPAS VOCE ENCONTRAR AQUI!</h3>
            </div>
            <div class="position-relative">
                <img class="col-md-12" src="~/img/destaque-2.jpg">
                <h3 class="text-img-destaque-2">O MELHOR PRECO!</h3>
            </div>
        </div>

        <!----Titulo Produtos em Destaque---->
        <div class="text-center titulo-box">
            <span class="titulo text-center">Produtos em Destaque</span>
        </div>

        <!---------CAROUSEL PRODUTO 1--------->
        <div id="carousel-p-1" class="carousel slide p-5" data-ride="carousel" data-interval="false">
            <ol class="carousel-indicators">
                <li data-target="#carousel-p-1" data-slide-to="0" class="active"></li>
                <li data-target="#carousel-p-1" data-slide-to="1"></li>
                <li data-target="#carousel-p-1" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="m-1 row text-center justify-content-around">
                        @{int min = 0; int max = 4;}

                        @for (int i = min; i < max; i++)
                        {
                            var produto = ViewBag.Produtos[i];
                            if (produto.Pedido == null)
                            {

                                <div class="card p-0 col-md-2">

                                    <div style="position: relative; overflow: auto;">
                                        <img src="~/img/@produto.Imagem" class="card-img-top" alt="@produto.Nome">
                                    </div>

                                    <!--Icone Fav-->
                                    <div class="icone-fav position-absolute">
                                        <i class="far fa-heart"></i>
                                    </div>

                                    <div class="card-body">
                                        <h5 class="card-title">@produto.Nome</h5>
                                        <p class="card-text">R$@produto.Valor</p>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <br>
                                        <a href="/Produtos/Detalhes/@produto.IdProduto" class="btn btn-primary mt-3">Mais Informacoes</a>
                                    </div>
                                </div>
                            }
                            else
                            {
                                max++;
                                min++;
                            }
                        }
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="m-1 row text-center justify-content-around">

                        @for (int i = min + 4; i < max + 4; i++)
                        {
                            var produto = ViewBag.Produtos[i];
                            if (produto.Pedido == null)
                            {

                                <div class="card p-0 col-md-2" style="min-width: 18rem;">

                                    <div style="position: relative; overflow: auto;">
                                        <img src="~/img/@produto.Imagem" class="card-img-top" alt="@produto.Nome">
                                    </div>

                                    <!--Icone Fav-->
                                    <div class="icone-fav position-absolute">
                                        <i class="far fa-heart"></i>
                                    </div>

                                    <div class="card-body">
                                        <h5 class="card-title">@produto.Nome</h5>
                                        <p class="card-text">R$@produto.Valor</p>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <br>
                                        <a href="/Produtos/Detalhes/@produto.IdProduto" class="btn btn-primary mt-3">Mais Informacoes</a>
                                    </div>
                                </div>
                            }
                            else
                            {
                                max++;
                                min++;
                            }
                        }
                    </div>
                </div>

            </div>
            <a class="carousel-control-prev" href="#carousel-p-1" role="button" data-slide="prev">
                <i class="fas fa-chevron-left mr-5" style="color: black; font-size: 35px;"></i>
            </a>
            <a class="carousel-control-next" href="#carousel-p-1" role="button" data-slide="next">
                <i class="fas fa-chevron-right ml-5" style="color: black; font-size: 35px;"></i>
            </a>
        </div>

    </main>

    <!----Banner---->
    <img src="~/img/Banner-1.jpg" class="img-fluid banner-2" alt="Responsive image">

    <!----Main 2---->
    <main class="container-fluid">

        <!----Titulo Produtos Mais Novos---->
        <div class="text-center titulo-box mt-5">
            <span class="titulo text-center">Produtos Mais Novos</span>
        </div>

        <!---------CAROUSEL PRODUTO 1--------->
        <div id="carousel-p-2" class="carousel slide p-5" data-ride="carousel" data-interval="false">
            <ol class="carousel-indicators">
                <li data-target="#carousel-p-2" data-slide-to="0" class="active"></li>
                <li data-target="#carousel-p-2" data-slide-to="1"></li>
                <li data-target="#carousel-p-2" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="m-1 row text-center justify-content-around">

                        @for (int i = min + 8; i < max + 8; i++)
                        {
                            var produto = ViewBag.Produtos[i];
                            if (produto.Pedido == null)
                            {

                                <div class="card p-0 col-md-2" style="min-width: 18rem;">

                                    <div style="position: relative; overflow: auto;">
                                        <img src="~/img/@produto.Imagem" class="card-img-top" alt="@produto.Nome">
                                    </div>

                                    <!--Icone Fav-->
                                    <div class="icone-fav position-absolute">
                                        <i class="far fa-heart"></i>
                                    </div>

                                    <div class="card-body">
                                        <h5 class="card-title">@produto.Nome</h5>
                                        <p class="card-text">R$@produto.Valor</p>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <br>
                                        <a href="/Produtos/Detalhes/@produto.IdProduto" class="btn btn-primary mt-3">Mais Informacoes</a>
                                    </div>
                                </div>
                            }
                            else
                            {
                                max++;
                                min++;
                            }
                        }
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="m-1 row text-center justify-content-around">

                        @for (int i = min + 12; i < max + 12; i++)
                        {
                            var produto = ViewBag.Produtos[i];
                            if (produto.Pedido == null)
                            {
                                <div class="card p-0 col-md-2" style="min-width: 18rem;">

                                    <div style="position: relative; overflow: auto;">
                                        <img src="~/img/@produto.Imagem" class="card-img-top" alt="@produto.Nome">
                                    </div>

                                    <!--Icone Fav-->
                                    <div class="icone-fav position-absolute">
                                        <i class="far fa-heart"></i>
                                    </div>

                                    <div class="card-body">
                                        <h5 class="card-title">@produto.Nome</h5>
                                        <p class="card-text">R$@produto.Valor</p>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <br>
                                        <a href="/Produtos/Detalhes/@produto.IdProduto" class="btn btn-primary mt-3">Mais Informacoes</a>
                                    </div>
                                </div>
                            }
                            else
                            {
                                max++;
                                min++;
                            }
                        }
                    </div>
                </div>

            </div>
            <a class="carousel-control-prev" href="#carousel-p-2" role="button" data-slide="prev">
                <i class="fas fa-chevron-left mr-5" style="color: black; font-size: 35px;"></i>
            </a>
            <a class="carousel-control-next" href="#carousel-p-2" role="button" data-slide="next">
                <i class="fas fa-chevron-right ml-5" style="color: black; font-size: 35px;"></i>
            </a>
        </div>
    </main>

    <footer class="position-relative">
        <div class="container">
            <div class="row text-center text-dark">
                <div class="col-md-3">
                    <ul class="nav flex-column">
                        <h3>Institucional</h3>
                        <li class="nav-link">Sobre a Loja</li>
                        <li class="nav-link">Trabalhe Conosco</li>
                        <li class="nav-link">Seja nosso Parceiro</li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <ul class="nav flex-column">
                        <h3>Ajuda</h3>
                        <li class="nav-link">Entregas</li>
                        <li class="nav-link">Pagamentos</li>
                        <li class="nav-link">Devolucao</li>
                        <li class="nav-link">Cancelamento</li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <ul class="nav flex-column">
                        <h3>Politica</h3>
                        <li class="nav-link">Regulamento</li>
                        <li class="nav-link">Politica de Provacidade</li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h3>Redes Sociais</h3>
                    <ul class="nav redes-sociais d-flex justify-content-around">
                        <li class="facebook"><a href="#"></a><i class="fab fa-facebook-square"></i></li>
                        <li class="instagram"><a href="#"></a><i class="fab fa-instagram"></i></li>
                        <li class="twitter"><a href="#"></a><i class="fab fa-twitter"></i></li>
                        <li class="youtube"><a href="#"></a><i class="fab fa-youtube"></i></li>
                    </ul>
                </div>
            </div>
        </div>
        <img class="position-absolute nuvem-1" src="../img/Nuvem-1.png">
        <img class="position-absolute nuvem-2" src="../img/Nuvem-2.png">
        <img class="position-absolute nuvem-3" src="../img/Nuvem-3.png">
        <img class="position-absolute nuvem-4" src="../img/Nuvem-4.png">
    </footer>

    <!--Script-->
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <script>
        function asd(e) {
            if (e.keyCode == 13) {
                window.location.href = "http://localhost:61651/Produtos";
                return false;
            }
            else {
                return true;
            }
        }
    </script>

</body>

</html>
