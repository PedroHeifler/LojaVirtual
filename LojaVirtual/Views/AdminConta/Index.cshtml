
@{
    ViewBag.Title = "Contas";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<main>
    <div class="tela-admin">
        <h1 class="mt-4">Gerenciamento de Endereços</h1>
        <div class="input-group col-md-5 mb-3 mt-5 p-0">
            <input type="search" oninput="Filtrar('.loginTr')" id="filtro-tabela" class="form-control" placeholder="Pesquise pelo nome">
        </div>

        <img class="spinner m-3" src="~/img/Spinner.gif" />

        <!-----Tabela de Login----->
        <div class="table-wrapper-scroll-y my-custom-scrollbar">
            <table class="table table-bordered table-striped table-dark">
                <thead class="thead">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Email</th>
                        <th scope="col">Senha</th>
                        <th scope="col">Tipo de Usuario</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var logins in ViewBag.Login)
                    {
                        <tr class="loginTr">
                            <th scope="row">@logins.IdLogin</th>
                            <td class="info-nome">@logins.Email</td>
                            <td>@logins.Senha</td>
                            <td>@logins.TpUsuario</td>
                            
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <hr>

        <!-----Form Usuario----->
        <form method="post">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="Email">Email</label>
                    <input name="Email" type="text" class="form-control"
                           placeholder="Exemplo: exemplo@gmail.com" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="senha">senha</label>
                    <input name="senha" type="text" class="form-control" placeholder="Minimo 5 e Maximo 15 digitos" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="TpUsuario">TpUsuario</label>
                    
                    <select name="TpUsuario" class="form-control">
                        <option>Usuario</option>
                        <option>Admin</option>
                    </select>
                </div>
            </div>
            
            <div class="mt-2">
                <button formaction="/AdminConta/Adicionar" type="submit" class="btn btn-success">Cadastrar</button>
                <button type="submit" class="btn btn-warning">Editar</button>
            </div>
        </form>
    </div>
</main>

<!--Script-->
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/Filtro.js"></script>






