
@{
    ViewBag.Title = "Pagamento";
    Layout = "~/Views/Shared/LayoutPadrao.cshtml";
}

<main class="container">
    <h2>Pagamento</h2>

    <!-----Icone de Pagamento----->
    <div class="row mt-3 mb-3">
        <div class="rounded col-md-2 m-4 animacao-pagamento" onclick="ativar(this)">
            <img src="../img/Mastercard.png" class="w-100 mt-1 mb-1" />
        </div>
        <div class="rounded col-md-2 m-4 animacao-pagamento" onclick="ativar(this)">
            <img src="../img/visa.png" class="w-100 mt-1 mb-1" />
        </div>
        <div class="rounded col-md-2 m-4 animacao-pagamento" onclick="ativar(this)">
            <img src="../img/paypal.png" class="w-100 mt-1 mb-1" />
        </div>
        <div class="rounded col-md-2 m-4 animacao-pagamento" onclick="ativar(this)">
            <img src="../img/boleto.png" class="w-100 mt-1 mb-1" />
        </div>
    </div>

    <!-----Cartao----->
    <form>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group col-md-10">
                    <label class="label-control">Número do cartão</label>
                    <input class="form-control" type="text" placeholder="Digite seu numero do cartão" />
                </div>
                <div class="form-group col-md-6">
                    <label class="label-control">Validade do Mês e Ano</label>
                    <input class="form-control" type="month" />
                </div>
                <div class="d-flex">
                    <div class="form-group col-md-6">
                        <label class="label-control">Codigo (CVV) <a href="#">(?)</a></label>
                        <input class="form-control" type="month" />
                    </div>
                    <div class="col-md-4 img-cvv">
                        <img src="../img/cvv.jpg" style="width: 300px; display:none" />
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <h3>Parcelas</h3>
                <p>Escolha a parcela que deseja pagar</p>
                <label><input type="radio" name="pagamento" value="1" /> 1X de = <span class="total"></span></label><br />
                    <label><input type="radio" name="pagamento" value="2" /> 2X de = </label><br />
                    <label><input type="radio" name="pagamento" value="3" /> 3X de = </label><br />
            </div>
        </div>
    </form>

</main>

<script src="../Scripts/PagamentoSelecionado.js">
    $(".total").text(sessionStorage.getItem("Total"));
</script>
