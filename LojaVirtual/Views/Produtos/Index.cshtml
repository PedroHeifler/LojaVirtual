@{
    ViewBag.Title = "Produtos";
    Layout = "~/Views/Shared/LayoutPadrao.cshtml";
}

<main class="d-flex">
    <ul class="nav flex-column p-4 menu-filtro">
        <li class="nav-item">
            <h3>Categoria</h3>
        </li>
        @foreach (var departamento in ViewBag.Departamentos)
        {
            <li class="nav-item" formaction='Produtos/Filtrar/${@departamento.IdDepartamento}'>
                <input type="checkbox" id="@departamento.Genero" name="departamento.Genero"  />
                <label for="@departamento.Genero">@departamento.Genero</label>
            </li>
        }
    </ul>

    <div class="m-5 row text-center position-relative">
        @foreach(var produto in ViewBag.Produtos)
        {
            <div class="card m-4 p-0 col-md-2 filtro-produtos" style="min-width: 14rem;">

                <div style="position: relative; overflow: auto;">
                    <img src="~/img/@produto.Imagem" class="card-img-top" alt="@produto.Nome">
                </div>

                <!--Icone Fav-->
                <div class="icone-fav position-absolute">
                    <i class="far fa-heart"></i>
                </div>

                <div class="card-body">
                    <h5 class="card-title">@produto.Nome</h5>
                    <p class="card-text">R$@produto.Valor</p>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <br>
                    <a href="#" class="btn btn-primary mt-3">Mais Informacoes</a>
                </div>
            </div>
        }
    </div>

</main>

